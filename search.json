---
layout: null
---
[
{% for post in site.posts %}
{
  "title"    : "{{ post.title | escape }}",
  "category" : "{{ post.category }}",
  "tags"     : "{{ post.tags | join: ', ' }}",
  "url"      : "{{ site.baseurl }}{{ post.url }}",
  "date"     : "{{ post.date }}",
  "content"  : "{{ post.content | strip_html | strip | replace: '\n', ' ' | remove: '\t' | split: ' ' | uniq | join: ' ' | json | escape | remove: '\' }}"
}{% unless forloop.last %},{% endunless %}
{% endfor %}
]
